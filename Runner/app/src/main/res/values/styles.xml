<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RunInformationStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/run_information_text_size</item>
    </style>

    <style name="RunStatisticsStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/run_statistics_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/run_statistics_margin</item>
        <item name="android:layout_marginEnd">@dimen/run_statistics_margin</item>
        <item name="android:layout_marginBottom">@dimen/run_statistics_margin</item>
    </style>

    <style name="StatisticsCaptionStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/statistics_caption_margin</item>
    </style>

    <style name="WeeklyGoalsAdditionalInformationStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">@dimen/weekly_goals_additional_information_text_size</item>
    </style>

    <style name="WidgetMessageStyle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/widget_margin</item>
        <item name="android:textSize">@dimen/widget_message_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NoRunsCompletedStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/no_runs_completed_text_size</item>
    </style>

    <style name="MiniWidgetTextStyle">
        <item name="android:textSize">@dimen/widget_message_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">@dimen/mini_widget_margin</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>